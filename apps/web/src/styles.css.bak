.ring2 { width: 70px; height: 70px; border-color: transparent rgba(139,92,246,.4) transparent rgba(139,92,246,.4); animation-duration: 3s; animation-direction: reverse; }
.ring3 { width: 50px; height: 50px; border-color: rgba(59,130,246,.4) transparent rgba(59,130,246,.4) transparent; animation-duration: 5s; }
@keyframes holoSpin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }

.holo-core {
