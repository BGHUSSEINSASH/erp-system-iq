/* ═══════════════════════════════════════════════════════════
   ERP System – Premium 3D Animated Stylesheet v3
   ═══════════════════════════════════════════════════════════ */

@import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800;900&display=swap');

:root {
  --sidebar-bg: linear-gradient(180deg, #0a0e1a 0%, #111827 40%, #0f172a 100%);
  --sidebar-glass: rgba(15, 23, 42, .92);
  --sidebar-hover: rgba(255,255,255,.05);
  --sidebar-active: #6366f1;
  --sidebar-text: #6b7fa3;
  --sidebar-heading: #e0e7ef;
  --sidebar-width: 280px;
  --sidebar-collapsed: 68px;
  --topbar-h: 64px;

  --surface: #eef2f7;
  --surface-pattern: radial-gradient(circle at 20% 80%, rgba(99,102,241,.04) 0%, transparent 50%),
                     radial-gradient(circle at 80% 20%, rgba(59,130,246,.04) 0%, transparent 50%);
  --card: #ffffff;
  --ink: #0f172a;
  --muted: #64748b;
  --border: #e2e8f0;

  --primary: #6366f1;
  --primary-light: #eef2ff;
  --primary-hover: #4f46e5;
  --primary-glow: rgba(99,102,241,.35);

  --accent: #3b82f6;
  --accent-glow: rgba(59,130,246,.3);

  --danger: #ef4444;
  --danger-glow: rgba(239,68,68,.3);
  --success: #10b981;
  --success-glow: rgba(16,185,129,.3);
  --warning: #f59e0b;
  --warning-glow: rgba(245,158,11,.3);

  --radius: 16px;
  --radius-sm: 10px;
  --radius-xs: 8px;

  --shadow-sm: 0 1px 2px rgba(0,0,0,.04);
  --shadow: 0 1px 3px rgba(0,0,0,.06), 0 4px 16px rgba(0,0,0,.04);
  --shadow-md: 0 4px 12px rgba(0,0,0,.08), 0 8px 32px rgba(0,0,0,.06);
  --shadow-lg: 0 10px 30px rgba(0,0,0,.1), 0 20px 60px rgba(0,0,0,.08);
  --shadow-3d: 0 8px 32px rgba(0,0,0,.12), 0 2px 8px rgba(0,0,0,.06);

  --glass-bg: rgba(255,255,255,.72);
  --glass-border: rgba(255,255,255,.5);
  --glass-blur: 16px;

  --transition-fast: .15s cubic-bezier(.4,0,.2,1);
  --transition: .25s cubic-bezier(.4,0,.2,1);
  --transition-slow: .4s cubic-bezier(.4,0,.2,1);
  --transition-bounce: .5s cubic-bezier(.34,1.56,.64,1);
}

/* ── Reset & Base ──────────────────────────────────────── */
*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

body {
  font-family: 'Tajawal', 'Segoe UI', -apple-system, sans-serif;
  background: var(--surface);
  background-image: var(--surface-pattern);
  color: var(--ink);
  min-height: 100vh;
  direction: rtl;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

body::before {
  content: '';
  position: fixed;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background:
    radial-gradient(circle 800px at 20% 30%, rgba(99,102,241,.03), transparent),
    radial-gradient(circle 600px at 70% 60%, rgba(59,130,246,.03), transparent),
    radial-gradient(circle 400px at 50% 80%, rgba(168,85,247,.02), transparent);
  animation: bgFloat 20s ease-in-out infinite alternate;
  pointer-events: none;
  z-index: -1;
}

@keyframes bgFloat {
  0% { transform: translate(0, 0) rotate(0deg); }
  100% { transform: translate(-30px, -20px) rotate(2deg); }
}

/* ═══════════════════════════════════════════════════════════
   LAYOUT
   ═══════════════════════════════════════════════════════════ */
.layout { display: flex; min-height: 100vh; }
.layout.collapsed .sidebar { width: var(--sidebar-collapsed); }
.layout.collapsed .main-area { margin-right: var(--sidebar-collapsed); }

.sidebar {
  width: var(--sidebar-width);
  background: var(--sidebar-bg);
  color: var(--sidebar-text);
  position: fixed;
  top: 0; right: 0; bottom: 0;
  display: flex;
  flex-direction: column;
  transition: width var(--transition);
  overflow-y: auto;
  overflow-x: hidden;
  z-index: 100;
  border-left: 1px solid rgba(255,255,255,.04);
  box-shadow: -4px 0 24px rgba(0,0,0,.2);
}

.sidebar::before {
  content: '';
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  background: linear-gradient(180deg, rgba(99,102,241,.08) 0%, transparent 30%);
  pointer-events: none;
}

.sidebar::-webkit-scrollbar { width: 3px; }
.sidebar::-webkit-scrollbar-track { background: transparent; }
.sidebar::-webkit-scrollbar-thumb { background: rgba(255,255,255,.1); border-radius: 3px; }

.sidebar-header {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 16px;
  border-bottom: 1px solid rgba(255,255,255,.06);
  min-height: 72px;
  z-index: 1;
}

.logo-wrap { display: flex; align-items: center; gap: 12px; }

.logo {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  font-weight: 900;
  font-size: 16px;
  padding: 10px 14px;
  border-radius: 14px;
  flex-shrink: 0;
  letter-spacing: .5px;
  box-shadow: 0 4px 16px rgba(99,102,241,.4), 0 0 0 1px rgba(255,255,255,.1) inset;
  animation: logoPulse 3s ease-in-out infinite;
  transform-style: preserve-3d;
  perspective: 600px;
}

@keyframes logoPulse {
  0%, 100% { box-shadow: 0 4px 16px rgba(99,102,241,.4); transform: scale(1); }
  50% { box-shadow: 0 6px 24px rgba(99,102,241,.6); transform: scale(1.03); }
}

.logo-text {
  font-size: 15px;
  font-weight: 800;
  color: white;
  white-space: nowrap;
  letter-spacing: .3px;
}

.toggle-btn {
  background: rgba(255,255,255,.06);
  border: 1px solid rgba(255,255,255,.08);
  color: var(--sidebar-text);
  cursor: pointer;
  font-size: 15px;
  width: 34px; height: 34px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
  backdrop-filter: blur(4px);
}

.toggle-btn:hover {
  background: rgba(255,255,255,.12);
  color: white;
  transform: scale(1.08);
  box-shadow: 0 0 12px rgba(99,102,241,.3);
}

/* ── Sidebar Nav ───────────────────────────────────────── */
.sidebar-nav {
  position: relative;
  padding: 8px 0;
  flex: 1;
  overflow-y: auto;
  z-index: 1;
}

.nav-section { margin-bottom: 2px; }

.nav-section-title {
  display: flex;
  align-items: center;
  gap: 10px;
  width: calc(100% - 12px);
  padding: 11px 14px;
  background: none;
  border: none;
  color: var(--sidebar-heading);
  font-size: 13px;
  font-weight: 700;
  cursor: pointer;
  text-align: right;
  border-radius: var(--radius-xs);
  margin: 1px 6px;
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
  font-family: inherit;
}

.nav-section-title::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(99,102,241,.1), transparent);
  opacity: 0;
  transition: opacity var(--transition-fast);
  border-radius: inherit;
}

.nav-section-title:hover::before { opacity: 1; }
.nav-section-title:hover { transform: translateX(-3px); }

.nav-icon {
  font-size: 19px;
  flex-shrink: 0;
  filter: drop-shadow(0 1px 2px rgba(0,0,0,.3));
}

.nav-label { flex: 1; }

.nav-arrow {
  font-size: 14px;
  transition: transform var(--transition);
  opacity: .6;
}

.nav-arrow.open { transform: rotate(90deg); opacity: 1; }

.nav-items {
  padding: 2px 0 8px 0;
  animation: slideDown .25s cubic-bezier(.4,0,.2,1);
}

@keyframes slideDown {
  from { opacity: 0; max-height: 0; transform: translateY(-8px); }
  to { opacity: 1; max-height: 600px; transform: translateY(0); }
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 9px 40px 9px 16px;
  color: var(--sidebar-text);
  text-decoration: none;
  font-size: 13px;
  font-weight: 500;
  border-right: 3px solid transparent;
  transition: all var(--transition-fast);
  margin: 1px 8px;
  border-radius: var(--radius-xs);
  position: relative;
}

.nav-link::before {
  content: '';
  width: 5px; height: 5px;
  border-radius: 50%;
  background: var(--sidebar-text);
  opacity: .3;
  transition: all var(--transition-fast);
  flex-shrink: 0;
}

.nav-link:hover {
  background: rgba(255,255,255,.05);
  color: white;
  transform: translateX(-4px);
}

.nav-link:hover::before { opacity: 1; background: var(--primary); box-shadow: 0 0 6px var(--primary-glow); }

.nav-link.active {
  color: white;
  background: linear-gradient(135deg, rgba(99,102,241,.15), rgba(99,102,241,.05));
  border-right-color: var(--primary);
  font-weight: 700;
}

.nav-link.active::before {
  background: var(--primary);
  box-shadow: 0 0 8px var(--primary-glow);
  opacity: 1;
  width: 6px; height: 6px;
}

/* ── Quick Actions ─────────────────────────────────────── */
.quick-actions {
  position: relative;
  border-top: 1px solid rgba(255,255,255,.06);
  padding: 16px 12px;
  margin-top: auto;
  z-index: 1;
}

.quick-actions-title {
  font-size: 10px;
  font-weight: 800;
  color: rgba(255,255,255,.35);
  margin-bottom: 10px;
  padding: 0 6px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.quick-action-btn {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 11px 14px;
  margin-bottom: 6px;
  border-radius: var(--radius-sm);
  background: linear-gradient(135deg, rgba(99,102,241,.12), rgba(139,92,246,.08));
  color: #a5b4fc;
  text-decoration: none;
  font-size: 13px;
  font-weight: 600;
  transition: all var(--transition);
  border: 1px solid rgba(99,102,241,.12);
  position: relative;
  overflow: hidden;
}

.quick-action-btn::after {
  content: '';
  position: absolute;
  top: 50%; left: 50%;
  width: 0; height: 0;
  background: radial-gradient(circle, rgba(255,255,255,.15), transparent);
  border-radius: 50%;
  transition: all .5s;
  transform: translate(-50%, -50%);
}

.quick-action-btn:hover::after { width: 300px; height: 300px; }

.quick-action-btn:hover {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  transform: translateX(-3px) scale(1.02);
  box-shadow: 0 6px 20px rgba(99,102,241,.4);
  border-color: transparent;
}

/* ═══════════════════════════════════════════════════════════
   MAIN AREA
   ═══════════════════════════════════════════════════════════ */
.main-area {
  margin-right: var(--sidebar-width);
  flex: 1;
  display: flex;
  flex-direction: column;
  transition: margin-right var(--transition);
  min-height: 100vh;
}

.topbar {
  height: var(--topbar-h);
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--glass-blur)) saturate(180%);
  border-bottom: 1px solid var(--glass-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28px;
  position: sticky;
  top: 0;
  z-index: 50;
  box-shadow: 0 1px 3px rgba(0,0,0,.03);
}

.page-brand {
  font-size: 18px;
  font-weight: 800;
  background: linear-gradient(135deg, #6366f1, #3b82f6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.topbar-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2px;
}

.user-name { font-weight: 700; font-size: 14px; }
.user-role { font-size: 11px; color: var(--muted); text-transform: uppercase; letter-spacing: .5px; }

.logout-btn {
  background: transparent;
  border: 1.5px solid var(--border);
  border-radius: var(--radius-xs);
  padding: 8px 18px;
  font-size: 13px;
  cursor: pointer;
  color: var(--ink);
  font-weight: 600;
  font-family: inherit;
  transition: all var(--transition);
}

.logout-btn:hover {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  border-color: transparent;
  box-shadow: 0 4px 16px var(--danger-glow);
  transform: translateY(-1px);
}

.content {
  flex: 1;
  padding: 28px;
  overflow-y: auto;
}

/* ═══════════════════════════════════════════════════════════
   PAGES & COMPONENTS
   ═══════════════════════════════════════════════════════════ */

.page {
  animation: pageEnter .5s cubic-bezier(.4,0,.2,1);
}

@keyframes pageEnter {
  from { opacity: 0; transform: translateY(20px) scale(.98); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24px;
  flex-wrap: wrap;
  gap: 14px;
}

.page-header h2 {
  font-size: 24px;
  font-weight: 800;
  position: relative;
}

.page-header h2::after {
  content: '';
  position: absolute;
  bottom: -6px;
  right: 0;
  width: 40px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), transparent);
  border-radius: 3px;
}

.page-subtitle { color: var(--muted); font-size: 14px; }

/* ═══════════════════════════════════════════════════════════
   BUTTONS – 3D Effect
   ═══════════════════════════════════════════════════════════ */
.btn {
  display: inline-flex;
  align-items: center;
  padding: 10px 22px;
  border: none;
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-weight: 700;
  font-family: inherit;
  cursor: pointer;
  transition: all var(--transition);
  gap: 8px;
  position: relative;
  overflow: hidden;
}

.btn::after {
  content: '';
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  background: linear-gradient(180deg, rgba(255,255,255,.15) 0%, transparent 50%);
  pointer-events: none;
}

.btn-primary {
  background: linear-gradient(135deg, #6366f1, #4f46e5);
  color: white;
  box-shadow: 0 4px 14px var(--primary-glow), 0 2px 4px rgba(0,0,0,.1), inset 0 1px 0 rgba(255,255,255,.15);
}

.btn-primary:hover {
  background: linear-gradient(135deg, #4f46e5, #4338ca);
  box-shadow: 0 8px 24px var(--primary-glow), 0 4px 8px rgba(0,0,0,.12), inset 0 1px 0 rgba(255,255,255,.2);
  transform: translateY(-2px);
}

.btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px var(--primary-glow), inset 0 2px 4px rgba(0,0,0,.15);
}

.btn-secondary {
  background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
  color: var(--ink);
  box-shadow: 0 2px 6px rgba(0,0,0,.05), inset 0 1px 0 rgba(255,255,255,.8);
}

.btn-secondary:hover {
  background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0,0,0,.08);
}

.btn-block { width: 100%; justify-content: center; }
.btn:disabled { opacity: .5; cursor: not-allowed; transform: none !important; }

.btn-sm {
  padding: 5px 12px;
  font-size: 12px;
  border: none;
  border-radius: var(--radius-xs);
  cursor: pointer;
  font-weight: 700;
  font-family: inherit;
  transition: all var(--transition-fast);
}

.btn-edit {
  background: linear-gradient(135deg, #dbeafe, #bfdbfe);
  color: #1d4ed8;
  box-shadow: 0 2px 4px rgba(29,78,216,.1);
}

.btn-edit:hover { transform: translateY(-1px) scale(1.04); box-shadow: 0 4px 12px rgba(29,78,216,.2); }

.btn-delete {
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  color: #dc2626;
  box-shadow: 0 2px 4px rgba(220,38,38,.1);
}

.btn-delete:hover { transform: translateY(-1px) scale(1.04); box-shadow: 0 4px 12px rgba(220,38,38,.2); }

.action-cell { display: flex; gap: 6px; }

/* ═══════════════════════════════════════════════════════════
   DATA TABLE – 3D Glass Card
   ═══════════════════════════════════════════════════════════ */
.table-wrapper {
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: var(--shadow-3d);
  overflow-x: auto;
  border: 1px solid rgba(226,232,240,.6);
  position: relative;
  animation: cardEnter .5s cubic-bezier(.4,0,.2,1) .1s both;
}

@keyframes cardEnter {
  from { opacity: 0; transform: translateY(16px) perspective(800px) rotateX(2deg); }
  to { opacity: 1; transform: translateY(0) perspective(800px) rotateX(0); }
}

.data-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.data-table th {
  text-align: right;
  padding: 16px 18px;
  background: linear-gradient(180deg, #f8fafc, #f1f5f9);
  color: var(--muted);
  font-weight: 800;
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: .06em;
  border-bottom: 2px solid var(--border);
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 2;
}

.data-table td {
  padding: 14px 18px;
  border-bottom: 1px solid #f5f7fa;
  transition: background var(--transition-fast);
}

.data-table tbody tr {
  transition: all var(--transition-fast);
}

.data-table tbody tr:hover {
  background: linear-gradient(135deg, rgba(99,102,241,.03), rgba(59,130,246,.02));
  transform: scale(1.002);
}

.data-table tbody tr:last-child td { border-bottom: none; }

.data-table tbody tr:nth-child(even) { background: rgba(248,250,252,.5); }
.data-table tbody tr:nth-child(even):hover { background: linear-gradient(135deg, rgba(99,102,241,.03), rgba(59,130,246,.02)); }

.empty-row { text-align: center; color: var(--muted); padding: 50px !important; font-size: 15px; }

/* ═══════════════════════════════════════════════════════════
   BADGES – Pill with glow
   ═══════════════════════════════════════════════════════════ */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  border-radius: 999px;
  font-size: 11px;
  font-weight: 700;
  text-transform: capitalize;
  letter-spacing: .02em;
  box-shadow: var(--shadow-sm);
}

.badge-active, .badge-present, .badge-posted, .badge-paid, .badge-received,
.badge-resolved, .badge-approved {
  background: linear-gradient(135deg, #dcfce7, #bbf7d0);
  color: #166534;
  box-shadow: 0 1px 4px rgba(22,101,52,.1);
}

.badge-inactive, .badge-absent, .badge-cancelled, .badge-disabled,
.badge-closed, .badge-discontinued {
  background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
  color: #475569;
}

.badge-late, .badge-pending, .badge-unpaid, .badge-draft,
.badge-medium, .badge-submitted {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  box-shadow: 0 1px 4px rgba(146,64,14,.08);
}

.badge-overdue, .badge-critical, .badge-high, .badge-open,
.badge-in-progress, .badge-rejected {
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  color: #991b1b;
  box-shadow: 0 1px 4px rgba(153,27,27,.08);
}

.badge-low { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-interviewing { background: linear-gradient(135deg, #e0e7ff, #c7d2fe); color: #3730a3; }
.badge-filled { background: linear-gradient(135deg, #d1fae5, #a7f3d0); color: #065f46; }
.badge-processed { background: linear-gradient(135deg, #ede9fe, #ddd6fe); color: #5b21b6; }

.badge-admin { background: linear-gradient(135deg, #ede9fe, #ddd6fe); color: #5b21b6; }
.badge-manager { background: linear-gradient(135deg, #e0e7ff, #c7d2fe); color: #3730a3; }
.badge-hr { background: linear-gradient(135deg, #fce7f3, #fbcfe8); color: #9d174d; }
.badge-finance { background: linear-gradient(135deg, #ecfdf5, #d1fae5); color: #064e3b; }
.badge-sales { background: linear-gradient(135deg, #fff7ed, #fed7aa); color: #9a3412; }

.badge-asset { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-liability { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #991b1b; }
.badge-equity { background: linear-gradient(135deg, #ede9fe, #ddd6fe); color: #5b21b6; }
.badge-revenue { background: linear-gradient(135deg, #dcfce7, #bbf7d0); color: #166534; }
.badge-expense { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }

.badge-annual { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-sick { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #991b1b; }
.badge-personal { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }
.badge-unpaid { background: linear-gradient(135deg, #f1f5f9, #e2e8f0); color: #475569; }
.badge-excellent { background: linear-gradient(135deg, #d1fae5, #a7f3d0); color: #065f46; }
.badge-good { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-average { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }
.badge-poor { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #991b1b; }

.badge-building { background: linear-gradient(135deg, #e0e7ff, #c7d2fe); color: #3730a3; }
.badge-land { background: linear-gradient(135deg, #d1fae5, #a7f3d0); color: #065f46; }
.badge-vehicle { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }
.badge-equipment { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-maintenance { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }
.badge-disposed { background: linear-gradient(135deg, #f1f5f9, #e2e8f0); color: #475569; }
.badge-expired { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #991b1b; }
.badge-terminated { background: linear-gradient(135deg, #f1f5f9, #e2e8f0); color: #475569; }

.badge-cash { background: linear-gradient(135deg, #d1fae5, #a7f3d0); color: #065f46; }
.badge-bank { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #1e40af; }
.badge-investment { background: linear-gradient(135deg, #ede9fe, #ddd6fe); color: #5b21b6; }
.badge-frozen { background: linear-gradient(135deg, #e0f2fe, #bae6fd); color: #075985; }

.badge-in-stock { background: linear-gradient(135deg, #d1fae5, #a7f3d0); color: #065f46; }
.badge-low-stock { background: linear-gradient(135deg, #fef3c7, #fde68a); color: #92400e; }
.badge-out-of-stock { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #991b1b; }

.text-danger { color: var(--danger); font-weight: 700; }

/* ═══════════════════════════════════════════════════════════
   MODAL – Glass Morphism 3D
   ═══════════════════════════════════════════════════════════ */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(15,23,42,.55);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
  animation: overlayIn .3s;
}

@keyframes overlayIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: white;
  border-radius: 20px;
  width: 90%;
  max-width: 580px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 30px 80px rgba(0,0,0,.25), 0 0 0 1px rgba(255,255,255,.1), inset 0 1px 0 rgba(255,255,255,.9);
  animation: modalIn .4s cubic-bezier(.34,1.56,.64,1);
  border: 1px solid rgba(0,0,0,.04);
}

@keyframes modalIn {
  from { opacity: 0; transform: scale(.9) translateY(30px) perspective(800px) rotateX(5deg); }
  to { opacity: 1; transform: scale(1) translateY(0) perspective(800px) rotateX(0); }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18px 24px;
  border-bottom: 1px solid var(--border);
  background: linear-gradient(180deg, #f8fafc, white);
  border-radius: 20px 20px 0 0;
}

.modal-header h3 { font-size: 18px; font-weight: 800; }

.modal-close {
  background: #f1f5f9;
  border: none;
  font-size: 18px;
  cursor: pointer;
  color: var(--muted);
  line-height: 1;
  width: 34px; height: 34px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
}

.modal-close:hover {
  background: #fee2e2;
  color: #dc2626;
  transform: rotate(90deg);
}

.modal-body { padding: 24px; }

/* ═══════════════════════════════════════════════════════════
   FORMS
   ═══════════════════════════════════════════════════════════ */
.form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 16px; }
.form-grid .form-actions { grid-column: 1 / -1; display: flex; gap: 10px; justify-content: flex-end; margin-top: 8px; }

.form-field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.form-field label {
  font-size: 12px;
  font-weight: 700;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: .04em;
}

.form-field input,
.form-field select {
  padding: 11px 16px;
  border: 1.5px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-family: inherit;
  transition: all var(--transition);
  background: #fafbfd;
}

.form-field input:focus,
.form-field select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(99,102,241,.1), 0 4px 12px rgba(99,102,241,.08);
  background: white;
  transform: translateY(-1px);
}

/* ═══════════════════════════════════════════════════════════
   STAT CARDS – 3D + Hover Lift
   ═══════════════════════════════════════════════════════════ */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
  margin-bottom: 28px;
}

.stat-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 22px;
  box-shadow: var(--shadow);
  border-right: 4px solid;
  display: flex;
  align-items: center;
  gap: 16px;
  transition: all var(--transition);
  position: relative;
  overflow: hidden;
  animation: statEnter .5s cubic-bezier(.4,0,.2,1) both;
}

.stat-card:nth-child(1) { animation-delay: .05s; }
.stat-card:nth-child(2) { animation-delay: .1s; }
.stat-card:nth-child(3) { animation-delay: .15s; }
.stat-card:nth-child(4) { animation-delay: .2s; }
.stat-card:nth-child(5) { animation-delay: .25s; }
.stat-card:nth-child(6) { animation-delay: .3s; }

@keyframes statEnter {
  from { opacity: 0; transform: translateY(24px) scale(.95); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.stat-card::before {
  content: '';
  position: absolute;
  top: -50%; left: -50%;
  width: 200%; height: 200%;
  background: radial-gradient(circle at center, rgba(99,102,241,.04), transparent 60%);
  opacity: 0;
  transition: opacity .4s;
}

.stat-card:hover {
  transform: translateY(-6px) scale(1.02);
  box-shadow: var(--shadow-lg);
}

.stat-card:hover::before { opacity: 1; }

.stat-icon {
  font-size: 30px;
  width: 56px; height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 14px;
  box-shadow: inset 0 -2px 4px rgba(0,0,0,.06);
}

.stat-value { font-size: 28px; font-weight: 900; }
.stat-label { font-size: 12px; color: var(--muted); text-transform: uppercase; letter-spacing: .04em; font-weight: 600; }

/* ═══════════════════════════════════════════════════════════
   DASHBOARD CHARTS
   ═══════════════════════════════════════════════════════════ */
.dashboard-charts {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.chart-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 24px;
  box-shadow: var(--shadow);
  border: 1px solid rgba(226,232,240,.5);
  transition: all var(--transition);
  animation: cardEnter .5s cubic-bezier(.4,0,.2,1) .2s both;
}

.chart-card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-3px);
}

.chart-card h3 {
  font-size: 16px;
  margin-bottom: 20px;
  font-weight: 800;
  display: flex;
  align-items: center;
  gap: 8px;
}

.bar-chart {
  display: flex;
  align-items: flex-end;
  gap: 12px;
  height: 200px;
  padding-top: 20px;
}

.bar-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.bar {
  width: 100%;
  max-width: 40px;
  background: linear-gradient(to top, #6366f1, #a78bfa);
  border-radius: 8px 8px 0 0;
  transition: height .6s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 -2px 8px rgba(99,102,241,.2), inset 0 1px 0 rgba(255,255,255,.3);
  position: relative;
}

.bar::after {
  content: '';
  position: absolute;
  top: 0; right: 0; left: 0;
  height: 30%;
  background: linear-gradient(180deg, rgba(255,255,255,.2), transparent);
  border-radius: 8px 8px 0 0;
}

.bar-value { font-size: 11px; font-weight: 700; margin-bottom: 4px; color: var(--primary); }
.bar-label { font-size: 11px; margin-top: 8px; color: var(--muted); font-weight: 600; }

.attendance-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 14px;
}

.att-item {
  text-align: center;
  padding: 20px;
  border-radius: 14px;
  transition: all var(--transition);
  box-shadow: inset 0 -2px 4px rgba(0,0,0,.04);
}

.att-item:hover { transform: scale(1.03); }

.att-item.present { background: linear-gradient(135deg, #dcfce7, #bbf7d0); }
.att-item.absent { background: linear-gradient(135deg, #fee2e2, #fecaca); }
.att-item.late { background: linear-gradient(135deg, #fef3c7, #fde68a); }
.att-item.leave { background: linear-gradient(135deg, #dbeafe, #bfdbfe); }

.att-val { font-size: 30px; font-weight: 900; }
.att-lbl { font-size: 12px; color: var(--muted); margin-top: 4px; font-weight: 600; }

.hbar-chart { display: flex; flex-direction: column; gap: 12px; }

.hbar-row {
  display: flex;
  align-items: center;
  gap: 12px;
  transition: transform var(--transition-fast);
}

.hbar-row:hover { transform: translateX(-4px); }

.hbar-name { width: 120px; font-size: 12px; text-align: right; flex-shrink: 0; font-weight: 600; }

.hbar-track {
  flex: 1;
  height: 20px;
  background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
  border-radius: 10px;
  overflow: hidden;
  box-shadow: inset 0 1px 3px rgba(0,0,0,.06);
}

.hbar-fill {
  height: 100%;
  background: linear-gradient(90deg, #6366f1, #a78bfa);
  border-radius: 10px;
  transition: width .8s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 0 8px rgba(99,102,241,.3);
  position: relative;
}

.hbar-fill::after {
  content: '';
  position: absolute;
  top: 0; right: 0; left: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,.25), transparent);
  border-radius: 10px 10px 0 0;
}

.hbar-val { font-size: 12px; font-weight: 700; width: 28px; color: var(--primary); }

/* ═══════════════════════════════════════════════════════════
   LOGIN – Glassmorphism 3D
   ═══════════════════════════════════════════════════════════ */
.login-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0a0e1a 0%, #111827 35%, #1e1b4b 75%, #312e81 100%);
  position: relative;
  overflow: hidden;
}

.login-page::before {
  content: '';
  position: absolute;
  top: -200px; right: -200px;
  width: 600px; height: 600px;
  background: radial-gradient(circle, rgba(99,102,241,.25), transparent 60%);
  animation: loginOrb1 8s ease-in-out infinite alternate;
}

.login-page::after {
  content: '';
  position: absolute;
  bottom: -200px; left: -200px;
  width: 500px; height: 500px;
  background: radial-gradient(circle, rgba(139,92,246,.2), transparent 60%);
  animation: loginOrb2 10s ease-in-out infinite alternate;
}

@keyframes loginOrb1 { 0% { transform: translate(0, 0); } 100% { transform: translate(-60px, 60px); } }
@keyframes loginOrb2 { 0% { transform: translate(0, 0); } 100% { transform: translate(40px, -40px); } }

.login-form {
  position: relative;
  z-index: 1;
  background: rgba(255,255,255,.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  padding: 48px;
  border-radius: 24px;
  width: 420px;
  box-shadow: 0 30px 80px rgba(0,0,0,.4), 0 0 0 1px rgba(255,255,255,.1), inset 0 1px 0 rgba(255,255,255,.8);
  animation: loginEnter .6s cubic-bezier(.34,1.56,.64,1);
}

@keyframes loginEnter {
  from { opacity: 0; transform: scale(.85) translateY(40px) perspective(800px) rotateX(8deg); }
  to { opacity: 1; transform: scale(1) translateY(0) perspective(800px) rotateX(0); }
}

.login-logo {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  font-weight: 900;
  font-size: 22px;
  width: 60px; height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18px;
  margin: 0 auto 20px;
  box-shadow: 0 8px 24px rgba(99,102,241,.4), inset 0 1px 0 rgba(255,255,255,.2);
  animation: logoPulse 3s ease-in-out infinite;
}

.login-form h2 { text-align: center; margin-bottom: 4px; font-weight: 800; font-size: 22px; }
.login-subtitle { text-align: center; color: var(--muted); font-size: 14px; margin-bottom: 24px; }

.login-form .form-field { margin-bottom: 16px; }

.login-hint {
  margin-top: 20px;
  font-size: 11px;
  color: var(--muted);
  text-align: center;
  line-height: 1.8;
  background: #f8fafc;
  padding: 12px;
  border-radius: var(--radius-sm);
}

/* ═══════════════════════════════════════════════════════════
   ALERTS
   ═══════════════════════════════════════════════════════════ */
.alert {
  padding: 12px 16px;
  border-radius: var(--radius-sm);
  font-size: 13px;
  margin-bottom: 16px;
  font-weight: 600;
  animation: alertShake .4s ease;
}

@keyframes alertShake {
  0%, 100% { transform: translateX(0); }
  20% { transform: translateX(-6px); }
  40% { transform: translateX(6px); }
  60% { transform: translateX(-3px); }
  80% { transform: translateX(3px); }
}

.alert-error {
  background: linear-gradient(135deg, #fee2e2, #fecaca);
  color: #991b1b;
  border: 1px solid rgba(239,68,68,.15);
}

/* ═══════════════════════════════════════════════════════════
   SETTINGS
   ═══════════════════════════════════════════════════════════ */
.settings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
}

.settings-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 24px;
  box-shadow: var(--shadow);
  border: 1px solid rgba(226,232,240,.5);
  transition: all var(--transition);
}

.settings-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); }

.settings-card h3 { margin-bottom: 18px; font-size: 17px; font-weight: 800; }
.settings-card .form-field { margin-bottom: 14px; }
.settings-card .btn { margin-top: 8px; }

/* ═══════════════════════════════════════════════════════════
   CARD (generic)
   ═══════════════════════════════════════════════════════════ */
.card {
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid rgba(226,232,240,.5);
  transition: all var(--transition);
}

.card:hover { box-shadow: var(--shadow-md); }

/* ═══════════════════════════════════════════════════════════
   LOADING
   ═══════════════════════════════════════════════════════════ */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200px;
  color: var(--primary);
  font-size: 15px;
  font-weight: 600;
  gap: 10px;
}

.loading::before {
  content: '';
  width: 24px; height: 24px;
  border: 3px solid rgba(99,102,241,.2);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin .8s linear infinite;
}

@keyframes spin { to { transform: rotate(360deg); } }

/* ═══════════════════════════════════════════════════════════
   ANIMATIONS
   ═══════════════════════════════════════════════════════════ */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ═══════════════════════════════════════════════════════════
   SCROLLBAR
   ═══════════════════════════════════════════════════════════ */
::-webkit-scrollbar { width: 6px; height: 6px; }
::-webkit-scrollbar-track { background: transparent; }
::-webkit-scrollbar-thumb { background: rgba(99,102,241,.15); border-radius: 6px; }
::-webkit-scrollbar-thumb:hover { background: rgba(99,102,241,.3); }

/* ═══════════════════════════════════════════════════════════
   RESPONSIVE
   ═══════════════════════════════════════════════════════════ */
@media (max-width: 900px) {
  .dashboard-charts { grid-template-columns: 1fr; }
  .form-grid { grid-template-columns: 1fr; }
}

@media (max-width: 768px) {
  .sidebar { width: var(--sidebar-collapsed) !important; }
  .main-area { margin-right: var(--sidebar-collapsed) !important; }
  .nav-label, .nav-items, .nav-arrow, .logo-text, .quick-actions { display: none !important; }
  .content { padding: 16px; }
}

/* ═══════════════════════════════════════════════════════════
   REPORT TABS
   ═══════════════════════════════════════════════════════════ */
.report-tabs {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
  padding: 4px;
  background: rgba(15, 23, 42, .5);
  border-radius: 12px;
  border: 1px solid rgba(99,102,241,.12);
}
.report-tab {
  padding: 10px 20px;
  border: none;
  background: transparent;
  color: #94a3b8;
  border-radius: 10px;
  cursor: pointer;
  font-size: .88rem;
  font-weight: 500;
  transition: all .3s cubic-bezier(.4,0,.2,1);
  position: relative;
  overflow: hidden;
}
.report-tab::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(99,102,241,.1), rgba(139,92,246,.1));
  opacity: 0;
  transition: opacity .3s;
}
.report-tab:hover { color: #e2e8f0; }
.report-tab:hover::before { opacity: 1; }
.report-tab.active {
  background: linear-gradient(135deg, rgba(99,102,241,.25), rgba(139,92,246,.2));
  color: #a5b4fc;
  box-shadow: 0 0 20px rgba(99,102,241,.15);
}
.report-tab.active::before { opacity: 1; }

.report-section { margin-top: 20px; }

/* ═══════════════════════════════════════════════════════════
   ANIMATE-IN (staggered fade+slide)
   ═══════════════════════════════════════════════════════════ */
.animate-in {
  animation: slideUpIn .5s cubic-bezier(.4,0,.2,1) both;
}
@keyframes slideUpIn {
  from { opacity: 0; transform: translateY(20px) scale(.98); }
  to   { opacity: 1; transform: translateY(0) scale(1); }
}
.stats-grid .stat-card:nth-child(1) { animation-delay: 0s; }
.stats-grid .stat-card:nth-child(2) { animation-delay: .05s; }
.stats-grid .stat-card:nth-child(3) { animation-delay: .1s; }
.stats-grid .stat-card:nth-child(4) { animation-delay: .15s; }
.stats-grid .stat-card:nth-child(5) { animation-delay: .2s; }
.stats-grid .stat-card:nth-child(6) { animation-delay: .25s; }
.stats-grid .stat-card:nth-child(7) { animation-delay: .3s; }
.stats-grid .stat-card:nth-child(8) { animation-delay: .35s; }
.stats-grid .stat-card { animation: slideUpIn .5s cubic-bezier(.4,0,.2,1) both; }

.settings-grid .settings-card:nth-child(1) { animation-delay: 0s; }
.settings-grid .settings-card:nth-child(2) { animation-delay: .08s; }
.settings-grid .settings-card:nth-child(3) { animation-delay: .16s; }
.settings-grid .settings-card:nth-child(4) { animation-delay: .24s; }
.settings-grid .settings-card:nth-child(5) { animation-delay: .32s; }
.settings-grid .settings-card:nth-child(6) { animation-delay: .40s; }

/* ═══════════════════════════════════════════════════════════
   TOGGLE SWITCH (for permissions)
   ═══════════════════════════════════════════════════════════ */
.toggle-switch {
  position: relative;
  display: inline-block;
  width: 44px;
  height: 24px;
  cursor: pointer;
}
.toggle-switch input {
  opacity: 0;
  width: 0;
  height: 0;
}
.toggle-slider {
  position: absolute;
  inset: 0;
  background: rgba(100,116,139,.4);
  border-radius: 24px;
  transition: all .3s cubic-bezier(.4,0,.2,1);
}
.toggle-slider::before {
  content: '';
  position: absolute;
  height: 18px;
  width: 18px;
  bottom: 3px;
  left: 3px;
  background: #e2e8f0;
  border-radius: 50%;
  transition: all .3s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 2px 6px rgba(0,0,0,.25);
}
.toggle-switch input:checked + .toggle-slider {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  box-shadow: 0 0 12px rgba(99,102,241,.3);
}
.toggle-switch input:checked + .toggle-slider::before {
  transform: translateX(20px);
}

/* ═══════════════════════════════════════════════════════════
   ENHANCED ANIMATIONS
   ═══════════════════════════════════════════════════════════ */
/* Page entry */
.page {
  animation: pageEntry .4s cubic-bezier(.4,0,.2,1) both;
}
@keyframes pageEntry {
  from { opacity: 0; transform: translateY(12px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* Ripple on buttons */
.btn { position: relative; overflow: hidden; }
.btn::after {
  content: '';
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at var(--x, 50%) var(--y, 50%), rgba(255,255,255,.15) 0%, transparent 60%);
  opacity: 0;
  transition: opacity .4s;
}
.btn:active::after { opacity: 1; transition: opacity 0s; }

/* Subtle pulse on stat icons */
.stat-icon { animation: pulseIcon 3s ease-in-out infinite; }
@keyframes pulseIcon {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.08); }
}

/* Table row hover slide */
.data-table tbody tr {
  transition: all .25s cubic-bezier(.4,0,.2,1);
}
.data-table tbody tr:hover {
  transform: translateX(-4px);
  box-shadow: 4px 0 16px rgba(99,102,241,.08);
}

/* Chart bar grow animation */
.bar {
  animation: barGrow .8s cubic-bezier(.4,0,.2,1) both;
}
@keyframes barGrow {
  from { height: 0 !important; }
}
.bar-col:nth-child(1) .bar { animation-delay: .0s; }
.bar-col:nth-child(2) .bar { animation-delay: .1s; }
.bar-col:nth-child(3) .bar { animation-delay: .2s; }
.bar-col:nth-child(4) .bar { animation-delay: .3s; }
.bar-col:nth-child(5) .bar { animation-delay: .4s; }
.bar-col:nth-child(6) .bar { animation-delay: .5s; }

/* Horizontal bar fill animation */
.hbar-fill {
  animation: hbarGrow .8s cubic-bezier(.4,0,.2,1) both;
}
@keyframes hbarGrow {
  from { width: 0 !important; }
}
.hbar-row:nth-child(1) .hbar-fill { animation-delay: .0s; }
.hbar-row:nth-child(2) .hbar-fill { animation-delay: .1s; }
.hbar-row:nth-child(3) .hbar-fill { animation-delay: .15s; }
.hbar-row:nth-child(4) .hbar-fill { animation-delay: .2s; }
.hbar-row:nth-child(5) .hbar-fill { animation-delay: .25s; }

/* Nav link hover glow */
.nav-link {
  transition: all .25s cubic-bezier(.4,0,.2,1);
}
.nav-link:hover {
  padding-right: 20px;
  text-shadow: 0 0 8px rgba(99,102,241,.3);
}

/* Card shimmer on hover */
.chart-card::after, .settings-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(135deg, transparent 40%, rgba(99,102,241,.03) 50%, transparent 60%);
  transform: rotate(45deg) translateX(-100%);
  transition: transform .6s;
  pointer-events: none;
}
.chart-card:hover::after, .settings-card:hover::after {
  transform: rotate(45deg) translateX(100%);
}

/* Badge pulse for approved */
.badge-approved { animation: badgePulse 2s ease-in-out infinite; }
@keyframes badgePulse {
  0%, 100% { box-shadow: 0 0 0 0 rgba(16,185,129,.3); }
  50% { box-shadow: 0 0 0 6px rgba(16,185,129,0); }
}

/* Loading spinner */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200px;
  color: #94a3b8;
  font-size: 1.1rem;
  animation: loadingPulse 1.5s ease-in-out infinite;
}
@keyframes loadingPulse {
  0%, 100% { opacity: .5; }
  50% { opacity: 1; }
}

/* Fade in keyframe */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-8px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* ═══════════════════════════════════════════════════════════
   DARK MODE
   ═══════════════════════════════════════════════════════════ */
body.dark-mode {
  --surface: #0f172a;
  --surface-pattern: radial-gradient(circle at 20% 80%, rgba(99,102,241,.06) 0%, transparent 50%),
                     radial-gradient(circle at 80% 20%, rgba(59,130,246,.06) 0%, transparent 50%);
  --card: #1e293b;
  --ink: #e2e8f0;
  --muted: #94a3b8;
  --border: #334155;
  --glass-bg: rgba(30,41,59,.85);
  --glass-border: rgba(51,65,85,.5);
  --primary-light: rgba(99,102,241,.15);
}
body.dark-mode::before {
  background:
    radial-gradient(circle 800px at 20% 30%, rgba(99,102,241,.06), transparent),
    radial-gradient(circle 600px at 70% 60%, rgba(59,130,246,.06), transparent),
    radial-gradient(circle 400px at 50% 80%, rgba(168,85,247,.04), transparent);
}
body.dark-mode .topbar {
  background: rgba(15,23,42,.9);
  border-bottom-color: #334155;
}
body.dark-mode .stat-card, body.dark-mode .chart-card, body.dark-mode .settings-card,
body.dark-mode .modal-content, body.dark-mode .approval-card, body.dark-mode .notification-item,
body.dark-mode .msg-detail-view, body.dark-mode .compose-form {
  background: #1e293b;
  border-color: #334155;
  color: #e2e8f0;
}
body.dark-mode .data-table th { background: #334155; color: #e2e8f0; }
body.dark-mode .data-table td { border-bottom-color: #334155; color: #cbd5e1; }
body.dark-mode .data-table tbody tr:hover { background: rgba(99,102,241,.08); }
body.dark-mode input, body.dark-mode select, body.dark-mode textarea {
  background: #0f172a; color: #e2e8f0; border-color: #475569;
}
body.dark-mode .search-dropdown { background: #1e293b; border-color: #334155; }
body.dark-mode .search-result-item:hover { background: rgba(99,102,241,.1); }
body.dark-mode .notif-dropdown { background: #1e293b; border-color: #334155; }
body.dark-mode .messages-sidebar { background: #162032; }
body.dark-mode .msg-item { border-bottom-color: #334155; }
body.dark-mode .msg-item:hover, body.dark-mode .msg-item.selected { background: rgba(99,102,241,.1); }
body.dark-mode .cal-day { background: #1e293b; border-color: #334155; }
body.dark-mode .cal-day:hover { background: #334155; }
body.dark-mode .cal-day.today { background: rgba(99,102,241,.15); }
body.dark-mode .page-brand { color: #e2e8f0; }
body.dark-mode .form-select { background: #0f172a; color: #e2e8f0; }
body.dark-mode .stat-icon { background: rgba(99,102,241,.15) !important; }

/* ═══════════════════════════════════════════════════════════
   TOPBAR ENHANCEMENTS
   ═══════════════════════════════════════════════════════════ */
.topbar { display: flex; align-items: center; justify-content: space-between; gap: 16px; flex-wrap: nowrap; }
.topbar-center { flex: 1; max-width: 500px; margin: 0 16px; }
.topbar-right { display: flex; align-items: center; gap: 10px; }

.topbar-icon-btn {
  background: none;
  border: none;
  font-size: 1.3rem;
  cursor: pointer;
  padding: 6px 8px;
  border-radius: 8px;
  transition: all .2s;
  position: relative;
}
.topbar-icon-btn:hover { background: rgba(99,102,241,.1); transform: scale(1.1); }

/* ═══════════════════════════════════════════════════════════
   GLOBAL SEARCH
   ═══════════════════════════════════════════════════════════ */
.global-search { position: relative; width: 100%; }
.search-input-wrap {
  display: flex; align-items: center; gap: 8px;
  background: var(--glass-bg); border: 1px solid var(--border);
  border-radius: 12px; padding: 6px 14px;
  backdrop-filter: blur(8px);
  transition: all .25s;
}
.search-input-wrap:focus-within {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px var(--primary-glow);
}
.search-icon { font-size: 1rem; opacity: .6; }
.search-input {
  border: none; background: none; outline: none;
  font-size: .9rem; font-family: inherit; color: var(--ink);
  width: 100%; padding: 4px 0;
}
.search-clear {
  border: none; background: none; cursor: pointer;
  font-size: .9rem; color: #94a3b8; padding: 2px 6px;
}
.search-dropdown {
  position: absolute; top: calc(100% + 6px); left: 0; right: 0;
  background: var(--card); border: 1px solid var(--border);
  border-radius: 12px; box-shadow: var(--shadow-lg);
  max-height: 400px; overflow-y: auto; z-index: 1000;
}
.search-result-item {
  padding: 10px 16px; cursor: pointer;
  border-bottom: 1px solid var(--border);
  transition: background .15s;
}
.search-result-item:hover { background: var(--primary-light); }
.search-result-item:last-child { border-bottom: none; }
.search-result-cat { font-size: .75rem; color: var(--primary); font-weight: 600; margin-bottom: 2px; }
.search-result-title { font-weight: 600; font-size: .9rem; }
.search-result-sub { font-size: .8rem; color: var(--muted); }

/* ═══════════════════════════════════════════════════════════
   NOTIFICATIONS
   ═══════════════════════════════════════════════════════════ */
.notif-bell-wrap { position: relative; }
.notif-count {
  position: absolute; top: -2px; right: -2px;
  background: #ef4444; color: white; font-size: .65rem;
  width: 18px; height: 18px; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-weight: 700; animation: badgePulse 2s infinite;
}
.notif-dropdown {
  position: absolute; top: calc(100% + 8px); left: auto; right: 0;
  width: 360px; background: var(--card); border: 1px solid var(--border);
  border-radius: 12px; box-shadow: var(--shadow-lg); z-index: 1000;
  overflow: hidden;
}
.notif-dropdown-header {
  display: flex; justify-content: space-between; align-items: center;
  padding: 12px 16px; border-bottom: 1px solid var(--border);
  font-size: .9rem;
}
.notif-mark-all {
  background: none; border: none; color: var(--primary);
  cursor: pointer; font-size: .8rem; font-family: inherit;
}
.notif-dropdown-item {
  display: flex; gap: 10px; padding: 10px 16px;
  border-bottom: 1px solid var(--border);
  transition: background .15s;
}
.notif-dropdown-item:hover { background: var(--primary-light); }
.notif-dropdown-icon { font-size: 1.3rem; flex-shrink: 0; }
.notif-dropdown-title { font-weight: 600; font-size: .85rem; }
.notif-dropdown-msg { font-size: .78rem; color: var(--muted); margin-top: 2px; }
.notif-dropdown-footer {
  padding: 10px; text-align: center; color: var(--primary);
  cursor: pointer; font-size: .85rem; font-weight: 600;
  border-top: 1px solid var(--border);
  transition: background .15s;
}
.notif-dropdown-footer:hover { background: var(--primary-light); }

/* Notifications Page */
.notification-item {
  display: flex; gap: 14px; padding: 16px;
  background: var(--card); border-radius: 12px;
  margin-bottom: 8px; border: 1px solid var(--border);
  transition: all .25s; cursor: default;
}
.notification-item.unread {
  border-right: 4px solid var(--primary);
  background: var(--primary-light);
}
.notification-item:hover { transform: translateX(-4px); box-shadow: var(--shadow-md); }
.notif-icon { font-size: 1.8rem; flex-shrink: 0; }
.notif-content { flex: 1; }
.notif-title { font-weight: 600; font-size: .95rem; display: flex; align-items: center; gap: 8px; }
.notif-dot { width: 8px; height: 8px; border-radius: 50%; background: var(--primary); animation: badgePulse 2s infinite; }
.notif-message { font-size: .85rem; color: var(--muted); margin-top: 4px; }
.notif-time { font-size: .75rem; color: var(--muted); margin-top: 6px; }

/* ═══════════════════════════════════════════════════════════
   MESSAGES
   ═══════════════════════════════════════════════════════════ */
.messages-layout {
  display: grid;
  grid-template-columns: 180px 320px 1fr;
  gap: 0;
  background: var(--card);
  border-radius: 16px;
  border: 1px solid var(--border);
  min-height: 500px;
  overflow: hidden;
}
.messages-sidebar {
  background: rgba(99,102,241,.04);
  border-left: 1px solid var(--border);
  padding: 12px 0;
}
.msg-folder-btn {
  display: flex; align-items: center; gap: 8px;
  width: 100%; padding: 10px 16px;
  border: none; background: none; cursor: pointer;
  font-family: inherit; font-size: .88rem;
  color: var(--muted); transition: all .2s;
  text-align: right;
}
.msg-folder-btn:hover { background: rgba(99,102,241,.08); color: var(--ink); }
.msg-folder-btn.active { background: var(--primary-light); color: var(--primary); font-weight: 600; border-left: 3px solid var(--primary); }
.msg-badge {
  background: #ef4444; color: white; font-size: .7rem;
  padding: 1px 6px; border-radius: 10px; margin-right: auto;
}
.messages-list {
  border-left: 1px solid var(--border);
  overflow-y: auto; max-height: 500px;
}
.msg-item {
  padding: 12px 16px; cursor: pointer;
  border-bottom: 1px solid var(--border);
  transition: all .15s; position: relative;
}
.msg-item:hover { background: rgba(99,102,241,.04); }
.msg-item.selected { background: var(--primary-light); }
.msg-item.unread { border-right: 3px solid var(--primary); }
.msg-item-header { display: flex; justify-content: space-between; align-items: center; }
.msg-item-header strong { font-size: .88rem; }
.msg-time { font-size: .75rem; color: var(--muted); }
.msg-subject { font-size: .85rem; font-weight: 500; margin-top: 4px; }
.msg-preview { font-size: .78rem; color: var(--muted); margin-top: 2px; }
.msg-star {
  position: absolute; top: 12px; left: 12px;
  border: none; background: none; cursor: pointer;
  font-size: 1rem; color: #cbd5e1; transition: all .2s;
}
.msg-star.starred { color: #f59e0b; }
.msg-star:hover { transform: scale(1.2); }
.messages-detail { padding: 24px; overflow-y: auto; }
.msg-detail-view {}
.msg-meta { display: flex; flex-direction: column; gap: 4px; margin: 16px 0; padding: 12px; background: rgba(99,102,241,.04); border-radius: 8px; font-size: .85rem; }
.msg-body-content { line-height: 1.8; margin-top: 16px; padding: 16px; background: var(--surface); border-radius: 8px; }
.compose-form { padding: 0; }
.compose-form label { display: block; font-weight: 600; font-size: .85rem; margin-bottom: 4px; color: var(--muted); }

/* ═══════════════════════════════════════════════════════════
   CALENDAR
   ═══════════════════════════════════════════════════════════ */
.calendar-container {
  display: grid;
  grid-template-columns: 1fr 300px;
  gap: 20px;
}
.calendar-main {
  background: var(--card);
  border-radius: 16px;
  border: 1px solid var(--border);
  padding: 20px;
}
.calendar-header {
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 16px;
}
.calendar-header h3 { font-size: 1.2rem; }
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4px;
}
.cal-day-name {
  text-align: center; font-size: .8rem; font-weight: 600;
  color: var(--muted); padding: 8px 0;
}
.cal-day {
  min-height: 70px; padding: 6px;
  border: 1px solid var(--border); border-radius: 8px;
  cursor: pointer; transition: all .2s;
  position: relative;
}
.cal-day.empty { border: none; cursor: default; }
.cal-day:not(.empty):hover { background: rgba(99,102,241,.06); border-color: var(--primary); }
.cal-day.today {
  background: var(--primary-light);
  border-color: var(--primary);
}
.cal-day.today .cal-day-num { color: var(--primary); font-weight: 700; }
.cal-day.selected { border-color: var(--primary); box-shadow: 0 0 0 2px var(--primary-glow); }
.cal-day.has-events .cal-day-num { font-weight: 600; }
.cal-day-num { font-size: .85rem; font-weight: 500; }
.cal-day-events { display: flex; gap: 3px; margin-top: 4px; flex-wrap: wrap; }
.cal-event-dot { width: 8px; height: 8px; border-radius: 50%; }
.calendar-sidebar-panel {
  background: var(--card);
  border-radius: 16px;
  border: 1px solid var(--border);
  padding: 20px;
}
.calendar-sidebar-panel h3 { font-size: 1rem; margin-bottom: 12px; }
.cal-event-card {
  padding: 12px; margin-bottom: 10px;
  background: var(--surface); border-radius: 10px;
  border-right: 4px solid;
  transition: all .2s;
}
.cal-event-card:hover { transform: translateX(-4px); box-shadow: var(--shadow); }
.cal-event-type { font-size: .78rem; color: var(--muted); margin-bottom: 4px; }
.cal-event-title { font-weight: 600; font-size: .9rem; }
.cal-event-time { font-size: .8rem; color: var(--muted); margin-top: 4px; }
.cal-event-loc { font-size: .8rem; color: var(--muted); margin-top: 2px; }

/* ═══════════════════════════════════════════════════════════
   APPROVALS
   ═══════════════════════════════════════════════════════════ */
.approvals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 16px;
}
.approval-card {
  background: var(--card); border: 1px solid var(--border);
  border-radius: 14px; padding: 18px;
  cursor: pointer; transition: all .25s;
  position: relative; overflow: hidden;
}
.approval-card:hover { transform: translateY(-2px); box-shadow: var(--shadow-md); }
.approval-card.selected { border-color: var(--primary); box-shadow: 0 0 0 2px var(--primary-glow); }
.approval-card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; }
.approval-type-icon { font-size: 1.5rem; }
.approval-card-title { font-weight: 700; font-size: 1rem; margin-bottom: 8px; }
.approval-card-meta { font-size: .82rem; color: var(--muted); display: flex; flex-direction: column; gap: 4px; }
.approval-card-date { font-size: .75rem; color: var(--muted); margin-top: 8px; }

/* ═══════════════════════════════════════════════════════════
   EXPORT BUTTONS
   ═══════════════════════════════════════════════════════════ */
.export-btns { display: flex; gap: 6px; }
.export-btns .btn { font-size: .82rem; padding: 6px 14px; }

/* ═══════════════════════════════════════════════════════════
   RESPONSIVE
   ═══════════════════════════════════════════════════════════ */
@media (max-width: 1024px) {
  .messages-layout { grid-template-columns: 1fr; }
  .messages-sidebar { display: flex; overflow-x: auto; padding: 0; border-left: none; border-bottom: 1px solid var(--border); }
  .msg-folder-btn { white-space: nowrap; }
  .messages-list { max-height: 300px; }
  .calendar-container { grid-template-columns: 1fr; }
  .topbar-center { max-width: 300px; }
}
@media (max-width: 768px) {
  .topbar-center { display: none; }
  .approvals-grid { grid-template-columns: 1fr; }
}

/* ═══════════════════════════════════════════════════════════════════════
   3D LOGIN PAGE
   ═══════════════════════════════════════════════════════════════════════ */
.login-page-3d {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #020617 0%, #0a0e27 25%, #111340 50%, #0c1445 75%, #030712 100%);
  position: relative;
  overflow: hidden;
  perspective: 1200px;
}

/* Animated Particles */
.login-particles {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}
.particle {
  position: absolute;
  border-radius: 50%;
  animation: particleFloat linear infinite;
  will-change: transform, opacity;
}
.p1 { width: 4px; height: 4px; background: rgba(99,102,241,.6); top: 15%; left: 20%; animation-duration: 8s; }
.p2 { width: 6px; height: 6px; background: rgba(139,92,246,.5); top: 30%; left: 75%; animation-duration: 12s; animation-delay: -2s; }
.p3 { width: 3px; height: 3px; background: rgba(59,130,246,.7); top: 70%; left: 10%; animation-duration: 10s; animation-delay: -4s; }
.p4 { width: 5px; height: 5px; background: rgba(99,102,241,.4); top: 85%; left: 60%; animation-duration: 14s; animation-delay: -1s; }
.p5 { width: 4px; height: 4px; background: rgba(168,85,247,.5); top: 50%; left: 90%; animation-duration: 9s; animation-delay: -6s; }
.p6 { width: 7px; height: 7px; background: rgba(99,102,241,.3); top: 10%; left: 50%; animation-duration: 16s; animation-delay: -3s; }
.p7 { width: 3px; height: 3px; background: rgba(59,130,246,.6); top: 60%; left: 30%; animation-duration: 11s; animation-delay: -5s; }
.p8 { width: 5px; height: 5px; background: rgba(139,92,246,.4); top: 40%; left: 45%; animation-duration: 13s; animation-delay: -7s; }

@keyframes particleFloat {
  0% { transform: translate3d(0, 0, 0) scale(1); opacity: 0; }
  10% { opacity: 1; }
  50% { opacity: .6; }
  90% { opacity: 1; }
  100% { transform: translate3d(calc(-50px + 100px * var(--r, .5)), -100vh, 0) scale(0); opacity: 0; }
}
.p1 { --r: 0.2; } .p2 { --r: 0.8; } .p3 { --r: 0.3; } .p4 { --r: 0.7; }
.p5 { --r: 0.1; } .p6 { --r: 0.6; } .p7 { --r: 0.4; } .p8 { --r: 0.9; }

/* 3D Grid Floor */
.login-grid-floor {
  position: absolute;
  bottom: 0; left: -50%; right: -50%;
  height: 60%;
  background:
    linear-gradient(rgba(99,102,241,.08) 1px, transparent 1px),
    linear-gradient(90deg, rgba(99,102,241,.08) 1px, transparent 1px);
  background-size: 60px 60px;
  transform: perspective(500px) rotateX(60deg) translateZ(0);
  transform-origin: bottom center;
  mask-image: linear-gradient(to top, rgba(0,0,0,.4), transparent 70%);
  -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,.4), transparent 70%);
  animation: gridScroll 10s linear infinite;
}
@keyframes gridScroll {
  0% { background-position: 0 0; }
  100% { background-position: 0 60px; }
}

/* Floating 3D Cubes */
.float-cube {
  position: absolute;
  width: 50px; height: 50px;
  transform-style: preserve-3d;
  animation: cubeFloat 16s ease-in-out infinite;
  z-index: 1;
  will-change: transform;
}
.cube1 { top: 15%; left: 10%; animation-delay: 0s; width: 40px; height: 40px; }
.cube2 { top: 25%; right: 12%; animation-delay: -3s; width: 55px; height: 55px; }
.cube3 { bottom: 25%; left: 15%; animation-delay: -6s; width: 35px; height: 35px; }

.cube-face {
  position: absolute;
  width: 100%; height: 100%;
  border: 1px solid rgba(99,102,241,.25);
  background: rgba(99,102,241,.04);
  backdrop-filter: blur(2px);
}
.cube-face.front  { transform: translateZ(25px); }
.cube-face.back   { transform: rotateY(180deg) translateZ(25px); }
.cube-face.right  { transform: rotateY(90deg) translateZ(25px); }
.cube-face.left   { transform: rotateY(-90deg) translateZ(25px); }
.cube-face.top    { transform: rotateX(90deg) translateZ(25px); }
.cube-face.bottom { transform: rotateX(-90deg) translateZ(25px); }

.cube1 .cube-face.front, .cube1 .cube-face.back { transform: translateZ(20px); }
.cube1 .cube-face.right { transform: rotateY(90deg) translateZ(20px); }
.cube1 .cube-face.left { transform: rotateY(-90deg) translateZ(20px); }
.cube1 .cube-face.top { transform: rotateX(90deg) translateZ(20px); }
.cube1 .cube-face.bottom { transform: rotateX(-90deg) translateZ(20px); }
.cube1 .cube-face.back { transform: rotateY(180deg) translateZ(20px); }

.cube3 .cube-face.front, .cube3 .cube-face.back { transform: translateZ(17px); }
.cube3 .cube-face.right { transform: rotateY(90deg) translateZ(17px); }
.cube3 .cube-face.left { transform: rotateY(-90deg) translateZ(17px); }
.cube3 .cube-face.top { transform: rotateX(90deg) translateZ(17px); }
.cube3 .cube-face.bottom { transform: rotateX(-90deg) translateZ(17px); }
.cube3 .cube-face.back { transform: rotateY(180deg) translateZ(17px); }

@keyframes cubeFloat {
  0%, 100% { transform: translateY(0) rotateX(0deg) rotateY(0deg); }
  25% { transform: translateY(-30px) rotateX(90deg) rotateY(45deg); }
  50% { transform: translateY(-15px) rotateX(180deg) rotateY(90deg); }
  75% { transform: translateY(-35px) rotateX(270deg) rotateY(135deg); }
}

/* Glowing Orbs */
.login-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(50px);
  pointer-events: none;
  z-index: 0;
}
.orb1 { width: 320px; height: 320px; background: rgba(99,102,241,.12); top: -10%; right: -5%; animation: orbDrift1 18s ease-in-out infinite alternate; }
.orb2 { width: 240px; height: 240px; background: rgba(139,92,246,.1); bottom: -5%; left: -3%; animation: orbDrift2 22s ease-in-out infinite alternate; }
.orb3 { width: 200px; height: 200px; background: rgba(59,130,246,.08); top: 40%; left: 50%; animation: orbDrift3 16s ease-in-out infinite alternate; }

@keyframes orbDrift1 { 0% { transform: translate(0,0) scale(1); } 100% { transform: translate(-80px, 60px) scale(1.2); } }
@keyframes orbDrift2 { 0% { transform: translate(0,0) scale(1); } 100% { transform: translate(60px, -50px) scale(1.1); } }
@keyframes orbDrift3 { 0% { transform: translate(0,0) scale(.8); } 100% { transform: translate(-40px, 30px) scale(1); } }

/* Main Login Card - 3D */
.login-card-3d {
  position: relative;
  z-index: 10;
  width: 440px;
  max-width: 92vw;
  opacity: 0;
  transform: perspective(1000px) rotateX(10deg) rotateY(-5deg) translateY(60px) scale(.85);
  transition: all 1s cubic-bezier(.34, 1.56, .64, 1);
}
.login-card-3d.mounted {
  opacity: 1;
  transform: perspective(1000px) rotateX(0) rotateY(0) translateY(0) scale(1);
}
.login-card-glass {
  background: rgba(15,23,42,.75);
  backdrop-filter: blur(24px) saturate(180%);
