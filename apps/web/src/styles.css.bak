.a-orb1 { width: 420px; height: 420px; background: rgba(99,102,241,.06); top: -10%; right: 10%; animation: orbDrift1 26s ease-in-out infinite alternate; }
.a-orb2 { width: 340px; height: 340px; background: rgba(59,130,246,.05); bottom: 5%; left: 30%; animation: orbDrift2 30s ease-in-out infinite alternate; }
.a-orb3 { width: 260px; height: 260px; background: rgba(139,92,246,.04); top: 40%; left: 60%; animation: orbDrift3 24s ease-in-out infinite alternate; }

/* 3D Sidebar */
.sidebar-3d {
